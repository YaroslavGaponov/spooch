#!/usr/bin/env node

/*
 * copyright (c) 2013 Yaroslav Gaponov <yaroslav.gaponov@gmail.com>
 */

var daemon = require("daemonize2").setup({
    main: "spooch.js",
    name: "spooch",
    pidfile: "spooch.pid"
});

switch (process.argv[2]) {

    case "start":
        daemon.start();
        break;

    case "stop":
        daemon.stop();
        break;

    default:
        console.log("Usage: [start|stop]");
}